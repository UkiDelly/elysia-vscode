{
  "name": "elysia-vscode",
  "displayName": "ElysiaJS VSCode Extension",
  "description": "Comprehensive VS Code extension for ElysiaJS Developers",
  "version": "0.0.6",
  "publisher": "ukidelly",
  "repository": {
    "type": "git",
    "url": "https://github.com/UkiDelly/elysia-vscode.git"
  },
  "icon": "icon.png",
  "keywords": [
    "elysia",
    "elysiajs",
    "route",
    "visualizer",
    "bun",
    "backend"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "workspaceContains:package.json",
    "onView:elysia-routes-view",
    "onCommand:elysia.refreshRoutes"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elysia-routes-container",
          "title": "Elysia Routes",
          "icon": "$(list-tree)"
        }
      ]
    },
    "views": {
      "elysia-routes-container": [
        {
          "icon": "$(list-tree)",
          "id": "elysia-routes-view",
          "name": "Elysia Routes"
        }
      ]
    },
    "commands": [
      {
        "command": "elysia.refreshRoutes",
        "title": "Refresh Routes",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "elysia.refreshRoutes",
          "when": "view == elysia-routes-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "@types/mocha": "^10.0.1",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "eslint": "^8.41.0"
  }
}